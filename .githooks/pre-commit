#!/usr/bin/env bash
#
# AleNats Pre-commit Hook
# Automatically formats C++ code and runs basic checks

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}Running pre-commit checks...${NC}"

# Check if clang-format is installed
if ! command -v clang-format &> /dev/null; then
    echo -e "${YELLOW}clang-format not found. Installing...${NC}"

    # Try to install based on OS
    if [[ "$OSTYPE" == "linux-gnu"* ]]; then
        sudo apt-get update && sudo apt-get install -y clang-format
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        brew install clang-format
    else
        echo -e "${RED}Please install clang-format manually${NC}"
        exit 1
    fi
fi

# Get list of staged C++ files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(cpp|h)$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}No C++ files to format${NC}"
    exit 0
fi

echo -e "${GREEN}Formatting staged C++ files...${NC}"

# Format each staged file
for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
        echo "  → Formatting $file"
        clang-format -i "$file"
        git add "$file"
    fi
done

# Check for common issues
echo -e "${GREEN}Running code checks...${NC}"

# Check for debug print statements that shouldn't be committed
FORBIDDEN_PATTERNS="std::cout|printf\(|std::cerr(?!.*logger)"
for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
        # Exclude examples directory
        if [[ "$file" != *"examples/"* ]]; then
            if grep -E "$FORBIDDEN_PATTERNS" "$file" > /dev/null; then
                echo -e "${YELLOW}Warning: Found potential debug print in $file${NC}"
                echo -e "${YELLOW}Consider using Nats::logger instead${NC}"
            fi
        fi
    fi
done

# Check for trailing whitespace
for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
        if grep -n '[[:space:]]$' "$file" > /dev/null; then
            echo -e "${YELLOW}Removing trailing whitespace from $file${NC}"
            sed -i '' 's/[[:space:]]*$//' "$file" 2>/dev/null || sed -i 's/[[:space:]]*$//' "$file"
            git add "$file"
        fi
    fi
done

echo -e "${GREEN}✓ Pre-commit checks passed${NC}"
exit 0
